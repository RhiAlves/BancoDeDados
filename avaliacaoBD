CREATE TABLE candidates (
    candidate_id INT PRIMARY KEY,
    candidate_name VARCHAR(100),
    party VARCHAR(50)
);

INSERT INTO candidates VALUES 
(1, 'Alice', 'Partido A'), (2, 'João', 'Partido B'), (3, 'Joana', 'Partido C');

CREATE TABLE regions (
    region_id INT PRIMARY KEY,
    region_name VARCHAR(100)
);
INSERT INTO regions VALUES 
(101, 'Região Norte'),
(102, 'Região Sul');

CREATE TABLE votes (
    vote_id INT PRIMARY KEY,
    candidate_id INT,
    region_id INT,
    vote_count INT,
    FOREIGN KEY (candidate_id) REFERENCES candidates(candidate_id),
    FOREIGN KEY (region_id) REFERENCES regions(region_id)
);

INSERT INTO votes VALUES 
(1, 1, 101, 500), (2, 2, 101, 300), (3, 1, 102, 200), (4, 3, 101, 150), (5, 2, 102, 250), (6, 3, 102, 400);

-- Consultas básicas
SELECT * FROM candidates;
SELECT * FROM votes;
SELECT * FROM regions;


-- Questões
-- 1. Total de votos por candidato
SELECT 
    candidate_id,
    SUM(vote_count) AS total_de_votos_por_candidato 
FROM 
    votes 
GROUP BY 
    candidate_id;

-- 2. Média de votos por região 
SELECT 
    region_id, 
    AVG(vote_count) AS media_votos 
FROM 
    votes 
GROUP BY 
    region_id;

-- 3. Candidatos com o maior número de votos em uma única região
SELECT 
    candidate_id,
    region_id, 
    MAX(vote_count) AS max_votos_por_regiao 
FROM 
    votes 
GROUP BY 
    candidate_id, region_id 
ORDER BY 
    max_votos_por_regiao DESC;

-- 4. Região com o maior número de votos
SELECT 
    region_id, 
    SUM(vote_count) AS regiao_com_maior_num_de_votos 
FROM 
    votes 
GROUP BY 
    region_id 
ORDER BY 
    regiao_com_maior_num_de_votos DESC 
LIMIT 1;

-- 5. Candidato com o maior número de votos
SELECT 
    candidate_id, 
    SUM(vote_count) AS total_votos 
FROM 
    votes 
GROUP BY 
    candidate_id 
ORDER BY 
    total_votos DESC 
LIMIT 1;

-- 6. Candidatos com mais de 600 votos
SELECT 
    candidate_id, 
    SUM(vote_count) AS total_votos 
FROM 
    votes 
GROUP BY 
    candidate_id 
HAVING 
    SUM(vote_count) > 600;

-- 7. Número de votos por região e por candidato
SELECT 
    region_id, 
    candidate_id, 
    SUM(vote_count) AS total_votos 
FROM 
    votes 
GROUP BY 
    region_id, 
    candidate_id 
ORDER BY 
    region_id, 
    candidate_id;




-- Consultas criadas com HAVING
-- Candidato com mais de 400 votos e menos de 600
SELECT 
    candidate_id, 
    MAX(vote_count) AS canidato_com_mais_de_400_votos, 
    SUM(vote_count) AS total_votos 
FROM 
    votes 
GROUP BY 
    candidate_id 
HAVING 
    MAX(vote_count) > 400 AND SUM(vote_count) < 600;

-- Consulta criada usando HAVING e INNER JOIN
SELECT 
    candidate_id,
    candidate_name,
    party,
    region_name,
    SUM(vote_count) AS total_votos_na_regiao
FROM 
    votes v
INNER JOIN 
    candidates c ON v.candidate_id = c.candidate_id
INNER JOIN 
    regions r ON v.region_id = r.region_id
GROUP BY 
    candidate_id, candidate_name, party, region_name
HAVING 
    SUM(v.vote_count) > 300
ORDER BY 
    total_votos_na_regiao DESC;
